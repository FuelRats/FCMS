{% include "header.jinja2" %}
{% include "dynamic_sidebar.jinja2" %}
<body class="hold-transition sidebar-mini">
<div class="wrapper">
  <!-- Navbar -->
  <nav class="main-header navbar navbar-expand navbar-darker">
    <!-- Left navbar links -->
    <ul class="navbar-nav navbar-darker">
      <li class="nav-item navbar-darker">
        <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
      </li>
      <li class="nav-item d-none d-sm-inline-block">
        <a href="/my_carrier" class="nav-link">Home</a>
      </li>
      <li class="nav-item d-none d-sm-inline-block">
        <a href="#" class="nav-link">Search</a>
      </li>
    </ul>

    <!-- SEARCH FORM -->
    <form class="form-inline ml-3" action="/search">
      <div class="input-group input-group-sm">
        <input class="form-control form-control-navbar" type="search" placeholder="Search" aria-label="Search" name="term">
        <div class="input-group-append">
          <button class="btn btn-navbar" type="submit">
            <i class="fas fa-search"></i>
          </button>
        </div>
      </div>
    </form>
  </nav>


  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0 text-dark">DSSA Carrier Search</h1>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/my_carrier">Home</a></li>
              <li class="breadcrumb-item active">DSSA Carrier Search</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
      <!-- Main content -->
          <section class="content">
      <div class="container-fluid">
          <!-- .card -->
          <div class="card services">
            <div class="card-header border-0">
                <h3 class="card-title"><i>{% include "inline_svgs/dssa_full.jinja2" %}</i></h3>
                <div class="card-tools">
                  <a href="#" class="btn btn-tool btn-sm">
                    <i class="fas fa-download"></i>
                  </a>
                  <a href="#" class="btn btn-tool btn-sm">
                    <i class="fas fa-bars"></i>
                  </a>
                </div>
              </div>
              <div class="card-body table-responsive p-0">
                <table class="table table-striped table-valign-middle">
                  <thead>
                  <tr>
                    <th>{{ col1_header }}</th>
                      {% if carrier_search %}
                      <th>Services</th>
                      {% endif %}
                    <th>{{ col2_header }}</th>
                    <th>{{ col3_header }}</th>
                    <th>{{ col4_header }}</th>
                  </tr>
                  </thead>
                  <tbody>
                  {% for it in items %}
                  <tr>
                    <td>
                      <i class="icon shipyard">{%- if it.is_DSSA -%}{% include 'inline_svgs/dssa.jinja2' %}{%- else -%}{% include it.col1_svg %}{%- endif -%}</i>
                        {% if carrier_search %}
                            <a href="/carrier/{{ it.col2 }}">
                            {{ it.col1|e }}
                            </a>
                            <td>
                            {% for service in it.services %}
                                <i class="icon shipyard" title="{{ service.title }}" style="color: {{ service.color }}">{% include service.svg %}</i>
                            {% endfor %}
                            </td>
                        {% else %}
                            {{ it.col1|e }}
                        {% endif %}
                    </td>
                    <td>
                        <a href="/carrier/{{ it.col2 }}">{{ it.col2 }}</a>
                    </td>
                    <td>
                      {{ it.col3 }}
                    </td>
                    <td>
                        {{ it.col4|e }}
                    </td>
                  </tr>
                  {% endfor %}
                  </tbody>
                <tfoot>
                <span class="text-muted">All distances in reference to {{ sys.name }}</span>
                </tfoot>
                </table>
              </div>
            </div>
            <!-- /.card -->
      </div>
    </section>
  </div>
</div>
</body>

{% include "footer.jinja2" %}