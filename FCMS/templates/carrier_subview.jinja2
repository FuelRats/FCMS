{% include "header.jinja2" %}
{% include "dynamic_sidebar.jinja2" %}
  <!-- Navbar -->
  <nav class="main-header navbar navbar-expand navbar-darker">
    <!-- Left navbar links -->
    <ul class="navbar-nav navbar-darker">
      <li class="nav-item navbar-darker">
        <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
      </li>
      <li class="nav-item d-none d-sm-inline-block">
        <a href="../../index3.html" class="nav-link">Home</a>
      </li>
      <li class="nav-item d-none d-sm-inline-block">
        <a href="#" class="nav-link">Profile</a>
      </li>
    </ul>

    <!-- SEARCH FORM -->
    <form class="form-inline ml-3" action="/search">
      <div class="input-group input-group-sm">
        <input class="form-control form-control-navbar" type="search" placeholder="Search" aria-label="Search" name="term">
        <div class="input-group-append">
          <button class="btn btn-navbar" type="submit">
            <i class="fas fa-search"></i>
          </button>
        </div>
      </div>
    </form>
  </nav>

 <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0 text-dark">{{ owner }}'s Carrier</h1>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">
                  <a href="{{ request.route_url('carrier',cid=callsign) }}">Carrier View </a>/ {{ current_view.title() }}</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <section class="content">
        <div class="container-fluid">

      <div class="col-lg-6">
            <div class="card">
              <div class="card-header border-0">
                <h3 class="card-title">{{ current_view.title() }}</h3>
                <div class="card-tools">
                  <a href="#" class="btn btn-tool btn-sm">
                    <i class="fas fa-download"></i>
                  </a>
                  <a href="#" class="btn btn-tool btn-sm">
                    <i class="fas fa-bars"></i>
                  </a>
                </div>
              </div>
              <div class="card-body table-responsive p-0">
                <table class="table table-striped table-valign-middle">
                  <thead>
                  <tr>
                    <th>{{ col1_header }}</th>
                    <th>{{ col2_header }}</th>
                    <th>{{ col3_header }}</th>
                    <th>{{ col4_header }}</th>
                  </tr>
                  </thead>
                  <tbody>
                  {% for it in items %}
                  <tr>
                    <td>
                      <i class="icon shipyard">{% include it.col1_svg %}</i>
                        {{ it.col1|e }}
                    </td>
                    <td>{{ it.col2 }}</td>
                    <td>
                        {{ it.col3 }}
                    </td>
                    <td>
                        {{ it.col4|safe }}
                    </td>
                  </tr>
                  {% endfor %}
                  </tbody>
                </table>
              </div>
            </div>
            <!-- /.card -->
      </div>
          <!-- Temp close -->
      </div>
    </section>
 </div>
{% include "footer.jinja2" %}